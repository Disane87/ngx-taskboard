{
  "name": "@disane/ngx-taskboard",
  "license": "MIT",
  "keywords": [
    "taskboard",
    "angular",
    "task items",
    "kanban"
  ],
  "scripts": {
    "release": "release-it --ci",
    "lint": "tslint --project \"tsconfig.lib.json\" --fix",
    "build": "ng config -g cli.warnings.versionMismatch false && ng build ngx-taskboard",
    "prebuild": "npx doctoc ./README.md && npx compodoc --output ./docs/ --tsconfig ./tsconfig.lib.json && npx compodoc --output ./docs/ --tsconfig ./tsconfig.lib.json --exportFormat json && node ./scripts/extractCompoDoc.js"
  },
  "devDependencies": {
    "@compodoc/compodoc": "^1.1.10",
    "auto-changelog": "^1.15.0",
    "doctoc": "^1.4.0",
    "release-it": "*",
    "replace-in-file": "^4.1.3",
    "tablemark": "^2.0.0",
    "tslint": "^5.18.0"
  },
  "auto-changelog": {
		"output": "CHANGELOG.md",
		"template": "clTemplate.hbs",
		"commitLimit": false,
		"package": true,
		"replaceText": {
			"FIX: ": "",
			"NEW: ": "",
			"IMPROVE: ": "",
			"DOC: ": ""
		}
	},
  "release-it": {
    "npm": {
      "publishPath": "../../dist/ngx-taskboard"
    },
    "beforeChangelogCommand": "npx auto-changelog",
    "safeBump": false,
    "verbose": true,
    "dry-run": true,
    "git": {
      "tagName": "ðŸ’» v${version}",
      "requireCleanWorkingDir": true,
      "requireUpstream": true,
      "requireCommits": false,
      "addUntrackedFiles": false,
      "commit": true,
      "commitMessage": " ðŸš€ Release ${version}"
    },
    "github": {
      "release": true
    },
    "hooks": {
      "before:init": [
        "npm run lint",
        "npm test"
      ],
      "after:init": "after init: ${version}",
      "before:bump": "before bump: ${version}",
      "after:bump": "npm run build && npm run prebuild",
      "after:git:release": "echo After git push, before github release",
      "after:release": "echo Successfully released ${name} v${version} to ${repo.repository}."
    }
  },
  "repository": {
    "directory": "github",
    "url": "https://github.com/Disane87/ngx-taskboard.git",
    "type": "git"
  },
  "readme": "",
  "author": {
    "name": "Marco Franke",
    "email": "mfranke87@icloud.com",
    "url": "https://byte-style.de"
  },
  "badges": [
    {
      "url": "https://img.shields.io/github/license/Disane87/ngx-taskboard",
      "description": "License",
      "href": "https://github.com/Disane87/ngx-taskboard/blob/master/LICENSE"
    },
    {
      "url": "https://img.shields.io/github/issues/Disane87/ngx-taskboard",
      "description": "Issues",
      "href": "https://github.com/Disane87/ngx-taskboard/issues"
    },
    {
      "url": "https://img.shields.io/github/stars/Disane87/ngx-taskboard",
      "description": "Stars",
      "href": "https://github.com/Disane87/ngx-taskboard/stargazers"
    }
  ],
  "description": "Yet another angular taskboard",
  "homepage": "https://ngx-taskboard.disane.de",
  "maintainers": [
    {
      "name": "Marco Franke",
      "email": "mfranke87@icloud.com"
    }
  ],
  "version": "1.1.5",
  "peerDependencies": {
    "@angular/common": "^7.2.0",
    "@angular/core": "^7.2.0"
  },
  "dependencies": {
    "ngx-select-ex": "^3.7.2"
  }
}
